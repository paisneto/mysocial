<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nunocoelho.mysocial.moment.AddMommentActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_data"
        android:layout_width="368dp"
        android:layout_height="274dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_weight="0.21"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/ll_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:orientation="vertical"
            tools:ignore="ExtraText"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"><![CDATA[>









            ]]>

            <LinearLayout
                android:id="@+id/lyt_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.21"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xsmall"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:contentDescription=""
                    android:src="@drawable/ic_title_gray_24dp"
                    android:tint="@color/grey_mdark"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/et_moment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/title"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight,NestedWeights" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.21"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="130dp">

                <Button
                    android:id="@+id/btn_moment_marker_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:text="@string/location"
                    tools:ignore="InefficientWeight,NestedWeights" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.21"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xsmall"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:id="@+id/ll_moment_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.21"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/spacing_xsmall"
                    android:orientation="horizontal"
                    tools:ignore="InefficientWeight,NestedWeights">

                    <ImageView
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:layout_margin="@dimen/spacing_middle"
                        android:src="@drawable/ic_near_me_gray_24dp"
                        android:tint="@color/material_grey_800"
                        tools:ignore="ContentDescription,PrivateResource" />

                    <TextView
                        android:id="@+id/tv_result_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_medium"
                        android:hint="@string/place"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/material_grey_800"
                        tools:ignore="PrivateResource" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_coord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.21"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xsmall"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:src="@drawable/ic_place_gray_24dp"
                    android:tint="@color/material_grey_800"
                    tools:ignore="ContentDescription,PrivateResource" />

                <TextView
                    android:id="@+id/tv_result_moment_lat"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:hint="@string/latitude"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/material_grey_800"
                    tools:ignore="PrivateResource" />

                <TextView
                    android:id="@+id/tv_result_moment_lon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:hint="@string/longitude"
                    android:maxLength="12"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/material_grey_800"
                    tools:ignore="PrivateResource" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="0.21"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_place">

                <ImageView
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:src="@drawable/ic_date_range_gray_24dp"
                    android:tint="@color/material_grey_800"
                    tools:ignore="ContentDescription,PrivateResource" />

                <EditText
                    android:id="@+id/et_moment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/date"
                    android:inputType="datetime"
                    android:textSize="14sp"
                    tools:ignore="InefficientWeight,NestedWeights" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_narrative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.21"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xsmall"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:contentDescription=""
                    android:src="@drawable/ic_description_gray_24dp"
                    android:tint="@color/grey_mdark"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:id="@+id/et_narrative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:gravity="bottom|left"
                    android:hint="@string/narrative"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    tools:ignore="RtlHardcoded" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_photo"
        android:layout_width="374dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_data">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add_image_moment"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_photo"
                app:srcCompat="@android:drawable/ic_menu_camera"
                tools:ignore="ContentDescription,InefficientWeight,RtlHardcoded" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:text="@string/btn_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.504" />


    <!--</LinearLayout>-->
    </android.support.constraint.ConstraintLayout>
